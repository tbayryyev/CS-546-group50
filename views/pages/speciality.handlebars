<h2>Top Rated {{spec}}s</h2>

{{#if docs.length}}
<ul>
    {{#each docs}}
    <li>
        <dl>
            <dt> <a class="name" href="/doctor/{{this._id}}">{{this.name}}</a>
            </dt>
            {{#if this.profilePicture}}
            <img alt="image" src={{this.profilePicture}} />
            {{else}}
            <img alt="image"
                src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/450px-No_image_available.svg.png" />
            {{/if}}

            <dt>About</dt>
            <dd>{{this.about}}</dd>
            <dt>Languages</dt>
            {{#if this.languages.length}}
            <ul>
                {{#each this.languages}}
                <li class="language">{{this}}</li>

                {{/each}}
            </ul>
            {{else}}
            <dd>N/A</dd>
            {{/if}}
            <dt>Address</dt>
            <dd>{{this.address}}</dd>
            <dt>City, State, Zipcode</dt>
            <dd>{{this.city}}, {{this.state}}, {{this.zip}}</dd>
            <dt>Rating</dt>
            <dd>{{this.rating}} Stars</dd>
            <dt>Reviews</dt>
            {{#if this.reviews.length}}
            <ul>
                {{#each this.reviews }}
                <li class="reviews">
                    <h3 class="userName">Username: {{this.username}}</h3>

                    <p class="Rating">Rating: {{this.rating}} Stars</p>

                    <p class="reviewText">ReviewText: {{this.reviewText}}</p>


                    {{#if this.comments.length}}
                    <p class="commentLabel">Comments:</p>
                    <ul>
                        {{#each this.comments}}
                        <li class="comments">
                            <p class="userName">Username: {{this.username}}</p>
                            <p class="commentText">Comment: {{this.commentText}}</p>


                            <p class="likes">Likes: {{this.likes.length}}</p>
                            <p class="dislikes">Dislikes: {{this.dislikes.length}}</p>




                        </li>
                        {{/each}}
                    </ul>
                    {{/if}}

                </li>

                {{/each }}
            </ul>


            {{else}}
            <dd>Currently there are no reviews for this doctor</dd>
            {{/if}}
    </li>
    {{/each}}
</ul>
{{else}}
<p class="not-found">We're sorry, but there are no current Doctors.</p>
{{/if}}